<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".UrlItem.AddUrlItemActivity">

    <TextView
        android:id="@+id/addUrlTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/addUrlTitleView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/addUrlInputTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/addUrlTitleView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/addUrlLinkView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Url:"
        app:layout_constraintTop_toBottomOf="@id/addUrlInputTitleView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/addUrlInputLinkView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/addUrlLinkView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/addUrlConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addUrlConfirmButton"
        android:onClick="onConfirmClick"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        />

</androidx.constraintlayout.widget.ConstraintLayout>